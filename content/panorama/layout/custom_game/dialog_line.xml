<root>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="s2r://panorama/styles/hudstyles.vcss_c"/>
        <include src="s2r://panorama/styles/hud/hud_reborn.vcss_c" />

        <include src="file://{resources}/styles/custom_game/dialog_log.css" />
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/custom_game/dialog_line.js" />
    </scripts>

    <Panel class="DialogLine" hittest="false" hittestchildren="false">
        <DOTAScenePanel id="DialogPortrait" unit="npc_dota_hero_pudge" environment="default" particleonly="false"/>
        <Panel class="SpeechBubble">
            <Panel class="SpeechBubbleContainer">
                <Panel class="SpeechBubbleBackgroundOutline"/>
                <Panel class="SpeechBubbleCalloutSquash">
                    <Panel class="SpeechBubbleCallout"/>
                </Panel>
                <Panel class="SpeechBubbleBackground"/>
            </Panel>
            <Label id="DialogText" html="true" class="DialogPanelText" />
        </Panel>
    </Panel>
</root>
